{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="https:/cdn.datatables.net/1.10.22/css/jquery.dataTables.min.css">
{% endblock %}

{% block title %}Boissons{% endblock %}

{% block body %}
    {% include 'navbar/index2.html.twig' %}

    <main id="main">

        <!-- ======= Breadcrumbs Section ======= -->
        <section class="breadcrumbs">
            <div class="container">

                <div class="d-flex justify-content-between align-items-center">
                    <h2>Boissons</h2>
                    <ol>
                        <li><a href="{{ path('index')}}#hero">Accueil</a></li>
                        <li>Boissons</li>
                    </ol>
                </div>

            </div>
        </section><!-- End Breadcrumbs Section -->

        <section class="inner-page">
            <div class="container">

                <div class="mb-5">

                    {% include 'menu_admin.html.twig' %}

                    {% for label, messages in app.flashes  %}
                        <div class="alert alert-{{ label }} alert-dismissible fade show text-center">
                            {% for message in messages %}
                                <p>{{ message }}</p>
                            {% endfor%}
                        </div>
                    {% endfor %}

                    <h1 class="mt-4 mb-4 text-center">Gestion des boissons</h1>
                    <div class="text-right">
                        <a href="{{ path('add_boisson')}}" class="btn btn-dark">Ajouter</a>
                    </div>
                    <table id="admin" class="table table-striped table-bordered" style="width:100%">
                        <thead>
                        <th>Produit</th>
                        <th>Prix</th>
                        <th>Description</th>
                        <th>Type</th>
                        <th>Modifier</th>
                        <th>Supprimer</th>
                        </thead>
                        <tbody>
                        {% for plas in pla %}
                            <tr>
                                <td>{{ plas.produit}}</td>
                                <td>{{ plas.prix }}â‚¬</td>
                                <td>{{ plas.description }}</td>
                                <td>{{ plas.type }}</td>
                                <td><a href="{{ path('modify_boisson', {'id':plas.id}) }}" class="btn btn-dark">Modifier</a></td>
                                <td><a href="{{ path('delete_boisson', {'id':plas.id}) }}" class="btn btn-dark">Supprimer</a></td>
                            </tr>
                        {% endfor %}


                        </tbody>
                    </table>
                </div>

            </div>

        </section>


    </main><!-- End #main -->

{% endblock %}

  {% block javascripts %}

      <script src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>
      <script>
          $(document).ready(function() {
              $('#admin').DataTable({

                  language: {
                      url: "https://cdn.datatables.net/plug-ins/1.10.16/i18n/French.json"
                  }

              });
          });
      </script>

  {% endblock %}