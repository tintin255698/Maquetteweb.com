{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="https:/cdn.datatables.net/1.10.22/css/jquery.dataTables.min.css">
{% endblock %}

{% block title %}Adresse{% endblock %}

{% block body %}
    {% include 'navbar/index2.html.twig' %}

    <main id="main">

        <!-- ======= Breadcrumbs Section ======= -->
        <section class="breadcrumbs">
            <div class="container">

                <div class="d-flex justify-content-between align-items-center">
                    <h2>Adresse</h2>
                    <ol>
                        <li><a href="{{ path('index')}}#hero">Accueil</a></li>
                        <li>Adresse</li>
                    </ol>
                </div>

            </div>
        </section><!-- End Breadcrumbs Section -->

        <section class="inner-page">
            <div class="container">

                <div class="mb-5">

                    {% include 'menu_admin.html.twig' %}
                    <h1 class="mt-4 mb-4 text-center">Liste des adresses (supprimer apres chaque commande)</h1>
                    <table id="admin" class="table table-striped table-bordered" style="width:100%">
                        <thead>
                        <tr>
                            <td>Nom</td>
                            <td>Prenom</td>
                            <td>Societe</td>
                            <td>Adresse</td>
                            <td>Adresse 2</td>
                            <td>Code postal</td>
                            <td>Ville</td>
                            <td>Suppression</td>
                        </tr>
                        </thead>
                        <tbody>
                        {% for plas in pla %}
                        <tr>
                            <td>{{ plas.nom }}</td>
                            <td>{{ plas.prenom }}</td>
                            <td>{{ plas.societe }}</td>
                            <td>{{ plas.adresse }}</td>
                            <td>{{ plas.adresse2 }}</td>
                            <td>{{ plas.cp }}</td>
                            <td> {{ plas.ville }}</td>
                            <td><a href="{{ path('supprimer_commande', {'id':plas.id}) }}" class="btn btn-dark"><i class='bx bx-check-double'></i></a></td>
                            {% endfor %}
</tr>
                    </table>

                </div>
            </div>

        </section>


    </main><!-- End #main -->

{% endblock %}

 {% block javascripts %}

     <script src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>
     <script>
         $(document).ready(function() {
             $('#admin').DataTable({

                 language: {
                     url: "https://cdn.datatables.net/plug-ins/1.10.16/i18n/French.json"
                 }

             });
         });
     </script>


 {% endblock %}