{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="https:/cdn.datatables.net/1.10.22/css/jquery.dataTables.min.css">
{% endblock %}


{% block title %}Administration{% endblock %}

{% block body %}
    {% include 'navbar/index2.html.twig' %}

    <main id="main">

        <!-- ======= Breadcrumbs Section ======= -->
        <section class="breadcrumbs">
            <div class="container">

                <div class="d-flex justify-content-between align-items-center">
                    <h2>Gestion des images</h2>
                    <ol>
                        <li><a href="{{ path('index')}}#hero">Accueil</a></li>
                        <li>Gestion des images</li>
                    </ol>
                </div>

            </div>
        </section><!-- End Breadcrumbs Section -->

        <section class="inner-page">
            <div class="container">

                <div class="mb-5">

                    {% include 'menu_admin.html.twig' %}


                    <h1 class="mt-4 mb-4 text-center">Liste des utilisateurs</h1>
                    <table id="admin" class="table table-striped table-bordered" style="width:100%">
                        <thead>
                        <th>Nom</th>
                        <th>Prenom</th>
                        <th>Email</th>
                        <th>Telephone</th>
                        <th>Date</th>
                        <th>Produit</th>
                        <th>Quantite</th>
                        </thead>
                        <tbody>
                        {% for plas in pla %}
                        <tr>
                            <td>{{ plas.user.nom }}</td>
                            <td>{{ plas.user.prenom }}</td>
                            <td>{{ plas.user.email }}</td>
                            <td>{{ plas.user.telephone }}</td>
                            <td>{{ plas.datetime|date('d/m/Y') }}</td>
                            <td>{{ plas.produit }}</td>
                            <td>{{ plas.quantite }}</td>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>

            </div>

        </section>


    </main><!-- End #main -->

{% endblock %}

  {% block javascripts %}

      <script src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>
      <script>
          $(document).ready(function() {
              $('#admin').DataTable({

                  language: {
                      url: "https://cdn.datatables.net/plug-ins/1.10.16/i18n/French.json"
                  }

              });
          });
      </script>

  {% endblock %}