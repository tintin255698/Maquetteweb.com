{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="https:/cdn.datatables.net/1.10.22/css/jquery.dataTables.min.css">
    <link href="/css/footerInner.css" rel="stylesheet">
{% endblock %}

{% block title %}Vos adresses de livraison{% endblock %}


{% block body %}

    {% include 'navbar/index2.html.twig' %}

    <main id="main">
        <!-- ======= Breadcrumbs Section ======= -->
        <section class="breadcrumbs">
            <div class="container">

                <div class="d-flex justify-content-between align-items-center">
                    <h2>Vos adresses de livraison</h2>
                    <ol>
                        <li><a href="{{ path('index')}}#hero">Accueil</a></li>
                        <li>Vos adresses de livraison</li>
                    </ol>
                </div>
            </div>
        </section><!-- End Breadcrumbs Section -->
        <div class="inner-page">
            <div class="container">

                <div id="gallery" class="gallery">

                    <div class="section-title mt-5">
                        <h1 class="mt-5">Vos adresses de livraison</h1>
                    </div>

                    <h2 class="mb-5">{{ app.user.prenom }}, <small>voici ce que vos adresses de livraison :</small></h2>

                    <div class="table-responsive">
                        <table id="admin" class="table table-striped table-bordered text-center" style="width:100%">

                            <thead>
                            <th>Prénom</th>
                            <th>Nom</th>
                            <th>Société</th>
                            <th>Adresse</th>
                            <th>Complément d'adresse</th>
                            <th>Code postal</th>
                            <th>Ville</th>
                            </thead>
                            <tbody>
                            {% for repos in repo %}
                                <tr>
                                    <td>{{ repos.prenom}}</td>
                                    <td>{{ repos.nom}}</td>
                                    <td>{{ repos.societe}}</td>
                                    <td>{{ repos.adresse}}</td>
                                    <td>{{ repos.adresse2}}</td>
                                    <td>{{ repos.cp}}</td>
                                    <td>{{ repos.ville}}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>



    </main><!-- End #main -->

{% endblock %}

  {% block javascripts %}

      <script src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>
      <script>
          $(document).ready(function() {
              $('#admin').DataTable({

                  language: {
                      url: "https://cdn.datatables.net/plug-ins/1.10.16/i18n/French.json"
                  }

              });
          });
      </script>

  {% endblock %}