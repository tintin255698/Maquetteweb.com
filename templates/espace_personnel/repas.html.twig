{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="https:/cdn.datatables.net/1.10.22/css/jquery.dataTables.min.css">
    <link href="/css/footerInner.css" rel="stylesheet">
{% endblock %}

{% block title %}Boissons{% endblock %}


{% block body %}

    {% include 'navbar/index2.html.twig' %}

    <main id="main">
        <!-- ======= Breadcrumbs Section ======= -->
        <section class="breadcrumbs">
            <div class="container">

                <div class="d-flex justify-content-between align-items-center">
                    <h2>Boissons</h2>
                    <ol>
                        <li><a href="{{ path('index')}}#hero">Accueil</a></li>
                        <li>Boissons</li>
                    </ol>
                </div>
            </div>
        </section><!-- End Breadcrumbs Section -->
        <div class="inner-page">
            <div class="container">

                <div id="gallery" class="gallery">

                    <div class="section-title mt-5">
                        <h1 class="mt-5">Liste des boissons</h1>
                    </div>

                    <h2 class="mb-5">{{ app.user.prenom }}, <small>voici ce que vous avez commandé comme boissons :</small></h2>

                    <div class="table-responsive">
                        <table id="admin" class="table table-striped table-bordered text-center" style="width:100%">

                            <thead>
                            <th>Dates</th>
                            <th>Produits</th>
                            <th>Quantités</th>
                            <th>Total</th>
                            </thead>
                            <tbody>
                            {% for repos in repo %}
                                <tr>
                                    <td>{{ repos.datetime|date('d/m/Y') }}</td>
                                    <td>{{ repos.produit}}</td>
                                    <td>{{ repos.quantite}}</td>
                                    <td>{{ repos.total}}€</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>

                </section>

    </main><!-- End #main -->

{% endblock %}
    {% block javascripts %}

        <script src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>
        <script>
            $(document).ready(function() {
                $('#admin').DataTable({

                    language: {
                        url: "https://cdn.datatables.net/plug-ins/1.10.16/i18n/French.json"
                    }

                });
            });
        </script>

    {% endblock %}